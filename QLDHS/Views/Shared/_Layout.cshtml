<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>
    <link href="~/Content/jquerysctiptop.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link rel="stylesheet" href="~/Scripts/core.css">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" >
    <link rel="icon" href="~/Content/img/logo.ico" />
    <script src="~/Scripts/jquery-3.5.1.min.js" ></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/popper.min.js" ></script>
    <script src="~/Scripts/core.js"></script>
    <script src="~/Scripts/jquery-jvectormap.js"></script>
    <script src="~/Scripts/jquery-mousewheel.js"></script>
    <script src="~/Scripts/jquery-jvectormap-world-mill-en.js"></script>
    <link rel="stylesheet" media="all" href="~/Content/jquery-jvectormap.css" />
</head>
<body>
    <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
    <!-- Vertical navbar -->
    <div class="vertical-nav bg-dark" id="sidebar">
        <div class="py-3 px-5 mb-5 bg-light">
            <div>
                <img src="~/Content/img/logo_1.png" class="center" />
            </div>
        </div>

        
        <p class="text-gray font-weight-bold text-uppercase px-3 small py-4 mb-0"></p>
        <ul class="nav flex-column bg-dark mb-0">
            <li class="nav-item" id="home">
                <a href="../home" class="nav-link text-light font-italic">
                    <i class="fa fa-home mr-3 text-primary fa-fw"></i>
                    Trang chủ
                </a>
            </li>
            <li class="nav-item" id="luuhs">
                <a href="../luuhs" class="nav-link text-light font-italic">
                    <i class="fa fa-bar-chart mr-3 text-primary fa-fw"></i>
                    Danh sách học sinh
                </a>
            </li>
            <li class="nav-item" id="thongke">
                <a href="../thongke" class="nav-link text-light font-italic">
                    <i class="fa fa-pie-chart mr-3 text-primary fa-fw"></i>
                    Thống kê
                </a>
            </li>
            <li class="nav-item" id="hoatdong">
                <a href="../hoatdong" class="nav-link text-light font-italic">
                    <i class="fa fa-line-chart mr-3 text-primary fa-fw"></i>
                    Các hoạt động
                </a>
            </li>
            <li class="nav-item" id="baocao">
                <a href="../baocao" class="nav-link text-light font-italic">
                    <i class="fa fa-file mr-3 text-primary fa-fw"></i>
                    Báo cáo
                </a>
            </li>
        </ul>
    </div>
    <!-- End vertical navbar -->
    <!-- Page content holder -->

    <div class="page-content p-5" id="content">
        <!-- Toggle button -->
        @*<button id="sidebarCollapse" type="button" class="btn btn-dark bg-dark rounded-pill shadow-sm px-4 mb-4" ><i class="fa fa-bars mr-2"></i><small id="textToogle" anhien="an" class="text-uppercase font-weight-bold">Ẩn</small></button>*@        
        <div id="carbon-block"></div>
        @RenderBody()


    </div>
    <!-- End content -->

    <!-- Footer content -->
    <div class="footer" style="border-top: solid black">
        <div style="display:inline-block;vertical-align:top;">
            <h5 style="text-align: left;display:inline-block;padding-top: 1px; font-weight: bold; margin-left: 20px;">HỌC VIỆN KỸ THUẬT QUÂN SỰ</h5>

            <div style="margin-left:20px;">
                <p>
                    Địa chỉ : 236 Hoàng Quốc Việt, Bắc Từ Liêm, Hà Nội<br>
                    Điện thoại: 069.515200<br>
                    Email: info@mta.edu.vn
                </p>
            </div>
        </div>
    </div>
    <!-- End Footer content -->


    <script>
        function setSelectedPageNav() {
            var pathName = location.pathname.toLowerCase()
            var patt1 = new RegExp("/home");
            var patt2 = new RegExp("/luuhs");
            var patt3 = new RegExp("/thongke");
            var patt4 = new RegExp("/hoatdong");
            var patt5 = new RegExp("/baocao");

            if (patt1.exec(pathName)!= null||pathName=="/") {
                $("#home").css("background", "#0d0e0f");
                
            }
            else if (patt2.exec(pathName) != null) {
                $("#luuhs").css("background", "#0d0e0f");
                
            }
            else if (patt3.exec(pathName) != null) {
                $("#thongke").css("background", "#0d0e0f");
            }
            else if (patt4.exec(pathName) != null) {
                $("#hoatdong").css("background", "#0d0e0f");
            }
            else if (patt5.exec(pathName) != null) {
                $("#baocao").css("background", "#0d0e0f");
            }
            else {

            }

            
        }
        setSelectedPageNav();
    </script>

</body>
</html>
